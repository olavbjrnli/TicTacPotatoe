<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:id="@+id/mfragment_frame"
        tools:context=".MultiPlayerFragment">


    <ImageView
            android:src="@drawable/potato1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="92dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="66dp"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:maxLength="4"
            android:textSize="15pt"
            android:text="P2"
            android:ems="10"
            android:id="@+id/nameTwo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"
            android:layout_marginTop="368dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_height="66dp"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:maxLength="4"
            android:textSize="15pt"
            android:text="P1"
            android:ems="10"
            android:id="@+id/nameOne"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"
            android:layout_marginTop="160dp" app:layout_constraintTop_toTopOf="parent" android:layout_width="300dp"/>
    <Button
            android:text="Start"
            android:layout_width="60pt"
            android:layout_height="30pt"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:id="@+id/btnBack" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="132dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="156dp"/>
    <TextView
            android:text="VS"
            android:textSize="15pt"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vsTextOne" android:layout_marginEnd="184dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/nameTwo"/>
    <TextView
            android:text="CHOOSE NAMES"
            android:layout_width="256dp"
            android:layout_height="57dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:gravity="center"
            android:id="@+id/txtNames"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>