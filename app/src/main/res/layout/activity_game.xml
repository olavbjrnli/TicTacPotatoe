<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:id="@+id/game_frame"
        tools:context=".GameActivity">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/potato1"
            android:id="@+id/imgBackground1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="91dp"
            app:layout_constraintBottom_toTopOf="@+id/btnLeaderboard" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Main menu"
            android:visibility="visible"
            android:layout_width="45pt"
            android:layout_height="30pt"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:id="@+id/menuBack"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="148dp" android:onClick="menuBack"/>
    <Button
            android:text="See leaderboard"
            android:visibility="visible"
            android:layout_width="45pt"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:layout_height="30pt"
            android:id="@+id/btnLeaderboard"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:onClick="seeLeaderboard"/>
    <TextView
            android:layout_width="50pt"
            android:layout_height="20pt"
            android:gravity="center"
            android:textSize="15pt"
            android:textColor="@color/white"
            android:id="@+id/playerTwo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="260dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="160dp" android:visibility="visible"/>
    <Button
            android:textSize="15pt"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btn1" android:onClick="btnClick"
            android:layout_marginTop="226dp" app:layout_constraintEnd_toStartOf="@+id/btn2"
            app:layout_constraintBottom_toTopOf="@+id/btn4" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp" android:layout_marginEnd="7dp" android:layout_marginRight="7dp"/>
    <Button
            android:textSize="15pt"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btn2" android:onClick="btnClick"
            android:layout_marginTop="226dp" app:layout_constraintStart_toEndOf="@+id/btn1"
            app:layout_constraintEnd_toStartOf="@+id/btn3" app:layout_constraintBottom_toTopOf="@+id/btn5"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:textSize="15pt"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btn3" android:onClick="btnClick"
            android:layout_marginTop="226dp" app:layout_constraintStart_toEndOf="@+id/btn2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btn6"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="62dp"
            android:layout_marginRight="62dp"/>


    <Button
            android:textSize="15pt"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btn4" android:onClick="btnClick"
            app:layout_constraintTop_toBottomOf="@+id/btn1" app:layout_constraintEnd_toStartOf="@+id/btn5"
            app:layout_constraintBottom_toTopOf="@+id/btn7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp" android:layout_marginStart="55dp" android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"/>
    <Button
            android:layout_width="0dp"
            android:textSize="15pt"
            android:layout_height="0dp" android:id="@+id/btn5" android:onClick="btnClick"
            app:layout_constraintTop_toBottomOf="@+id/btn2" app:layout_constraintStart_toEndOf="@+id/btn4"
            app:layout_constraintEnd_toStartOf="@+id/btn6" app:layout_constraintBottom_toTopOf="@+id/btn8"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:layout_width="0dp"
            android:textSize="15pt"
            android:layout_height="0dp" android:id="@+id/btn6" android:onClick="btnClick"
            app:layout_constraintTop_toBottomOf="@+id/btn3" app:layout_constraintStart_toEndOf="@+id/btn5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btn9"
            android:layout_marginEnd="62dp" android:layout_marginRight="62dp"/>


    <Button
            android:layout_width="0dp"
            android:textSize="15pt"
            android:layout_height="0dp" android:id="@+id/btn7" android:onClick="btnClick"
            app:layout_constraintTop_toBottomOf="@+id/btn4" app:layout_constraintEnd_toStartOf="@+id/btn8"
            android:layout_marginBottom="226dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp" android:layout_marginStart="55dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"/>
    <Button
            android:textSize="15pt"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btn8" android:onClick="btnClick"
            app:layout_constraintTop_toBottomOf="@+id/btn5" app:layout_constraintStart_toEndOf="@+id/btn7"
            app:layout_constraintEnd_toStartOf="@+id/btn9" android:layout_marginBottom="226dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <Button
            android:textSize="15pt"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btn9"
            android:onClick="btnClick"
            app:layout_constraintTop_toBottomOf="@+id/btn6" app:layout_constraintStart_toEndOf="@+id/btn8"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="226dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="62dp"
            android:layout_marginRight="62dp"/>
    <TextView
            android:layout_width="50pt"
            android:layout_height="20pt"
            android:gravity="center"
            android:textSize="15pt"
            android:textColor="@color/white"
            android:id="@+id/playerOne" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="160dp" android:visibility="visible"/>
    <TextView
            android:text="@string/vs"
            android:gravity="center"
            android:layout_width="40pt"
            android:layout_height="20pt"
            android:textSize="15pt"
            android:textColor="@color/white"
            android:id="@+id/vsText" android:layout_marginEnd="160dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="160dp"/>
    <Button
            android:text="@string/new_game"
            android:visibility="visible"
            android:layout_width="45pt"
            android:layout_height="30pt"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:id="@+id/btnRestart"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="264dp" android:onClick="restartGame"/>
    <TextView
            android:layout_width="217dp"
            android:layout_height="86dp"
            android:gravity="center"
            android:textSize="15pt"
            android:textColor="@color/white"
            android:id="@+id/playerWinner"
            android:background="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="68dp" app:layout_constraintTop_toTopOf="parent" android:visibility="visible"
            tools:visibility="visible"/>
    <TextView
            android:text="is playing"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isPlayingOne" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="69dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="138dp" android:visibility="invisible"/>
    <TextView
            android:text="Is playing"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isPlayingTwo" android:layout_marginEnd="77dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="138dp"
            android:visibility="invisible"/>
    <Chronometer android:layout_width="113dp"
                 android:layout_height="59dp"
                 android:textColor="@color/white"
                 android:gravity="center"
                 android:textSize="20sp"
                 app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="148dp"
                 android:layout_marginBottom="100dp" app:layout_constraintBottom_toBottomOf="parent"
                 android:id="@+id/timer"/>

</android.support.constraint.ConstraintLayout>