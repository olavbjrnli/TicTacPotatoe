<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:id="@+id/start_frame"
        tools:context=".MainActivity">

    <Button
            android:text="Play Multiplayer"
            android:layout_width="80pt"
            android:layout_height="40pt"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:id="@+id/btnPlayMultiplayer" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="112dp"
            android:onClick="playMultiplayerButton" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="122dp"/>
    <Button
            android:text="Play Singleplayer"
            android:layout_width="80pt"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:id="@+id/btnPlaySingleplayer" android:layout_height="40pt"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="112dp"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/btnPlayMultiplayer"
            android:onClick="playSingleplayerButton"/>
    <TextView
            android:text="TIC TAC"
            android:layout_width="159dp"
            android:layout_height="39dp"
            android:textSize="20sp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="POTATOE"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_width="187dp"
            android:layout_height="72dp"
            android:textColor="@color/white"
            android:background="@color/colorAccent"
            android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/potato1"
            android:id="@+id/imgBackground2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="91dp"
            app:layout_constraintBottom_toTopOf="@+id/imgBackground" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.277"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/fries"
            android:id="@+id/imgBackground"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="112dp" android:layout_marginTop="452dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>