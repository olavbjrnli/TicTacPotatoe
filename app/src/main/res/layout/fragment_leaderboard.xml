<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:id="@+id/mfragment_frame_single"
        tools:context=".LeaderboardFragment">


    <ImageView
            android:src="@drawable/potato1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgBackground1"
            app:layout_constraintStart_toEndOf="@+id/btnBack" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="92dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Back"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:layout_width="60pt"
            android:layout_height="30pt"
            android:id="@+id/btnBack" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="132dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="76dp"/>
    <ListView
            android:layout_width="207dp"
            android:layout_height="305dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="112dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="264dp" android:id="@+id/statsView"/>
    <TextView
            android:text="LEADERBOARD"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:textSize="30dp"
            android:layout_width="221dp"
            android:layout_height="69dp"
            android:id="@+id/txtStat" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.34"/>
</android.support.constraint.ConstraintLayout>